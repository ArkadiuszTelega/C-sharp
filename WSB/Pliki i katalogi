            string path = @"C:\Users\student\C#Files";

            try
            {
                if (Directory.Exists(path))
                {
                    Console.WriteLine("Katalog istnieje");
                }
                else
                {
                    Directory.CreateDirectory("\\Users\\student\\C#Files"); //Tworzenie folderu
                    string textFilePath = @"C:\Users\student\C#Files\testFile1.txt";
                    File.WriteAllLines(textFilePath, customers);            // Tworzenie pliku "testFile1"

                    Console.WriteLine("\n Utworzono katalog: {0}", Directory.GetCreationTime(path));
                }
            }catch(Exception e)
            {
                Console.WriteLine("Error: {0}", e.ToString()); //Wyświetlaniu numeru błędu
            }
            
            
                        
                        /* Żeby pokazać zawartość pliku tekstowego w CMD, wpisz "type nazwapliku.txt" lub  */


